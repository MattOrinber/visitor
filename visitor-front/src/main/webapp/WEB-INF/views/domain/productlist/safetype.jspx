<html xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" xmlns:jsp="http://java.sun.com/JSP/Page" 
xmlns:decorator="http://www.opensymphony.com/sitemesh/decorator" xmlns:c="http://java.sun.com/jsp/jstl/core" 
xmlns:form="http://www.springframework.org/tags/form" xmlns:security="http://www.springframework.org/security/tags" 
xmlns:spring="http://www.springframework.org/tags" version="2.0">
<jsp:output omit-xml-declaration="yes" />
<jsp:directive.page contentType="text/html; charset=UTF-8" />
<head>
	<title><spring:message code="productList" />: <spring:message code="productList_safeType" /></title>
</head>
<body>
<form:form action="${pageContext.request.contextPath}/domain/productlist/safetype/${productList.primaryKey}" method="POST">
	<table class="list">
			<tbody>
			<c:forEach items="${productFiles}" var="productFile" varStatus="_st">
					<input type="hidden" name="fileIds" value="${productFile.fileId}" />
					<tr>
						<td>
							<c:out value="${productFile.fileName}" />
						</td>
						<td>
							<select name="safeTypes" style="width:65px">
								<c:forEach items="${fileSafeTypeList}" var="safeType">
									<c:if test="${safeType.value == productFile.safeType}">
										<option value="${safeType.value}" selected="selected">${safeType.name}</option>
									</c:if>
									<c:if test="${safeType.value != productFile.safeType}">
										<option value="${safeType.value}">${safeType.name}</option>
									</c:if>
								</c:forEach>
							</select>
						</td>
						<td>
							<select name="autoScans" style="width:40px">
								<c:if test="${productFile.autoScan == 0}">
									<option value="0" selected="selected"><spring:message code="OPEN" /></option>
									<option value="1"><spring:message code="CLOSE" /></option>
								</c:if>
								<c:if test="${productFile.autoScan == 1}">
									<option value="0"><spring:message code="OPEN" /></option>
									<option value="1" selected="selected"><spring:message code="CLOSE" /></option>
								</c:if>
							</select>
						</td>
					</tr>
				</c:forEach>
			</tbody>
			<tfoot>
				<tr>
					<td colspan="3">
						<spring:message code="crud.save.button" var="btnMsg" />
						<input type="submit" value="${btnMsg}" class="button button-save"/>
					</td>
				</tr>
			</tfoot>
	</table>
</form:form>
</body>
</html>