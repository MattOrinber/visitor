<html xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" xmlns:jsp="http://java.sun.com/JSP/Page" 
xmlns:decorator="http://www.opensymphony.com/sitemesh/decorator" xmlns:c="http://java.sun.com/jsp/jstl/core" 
xmlns:form="http://www.springframework.org/tags/form" xmlns:security="http://www.springframework.org/security/tags" 
xmlns:spring="http://www.springframework.org/tags" version="2.0">
<jsp:output omit-xml-declaration="yes" />
<jsp:directive.page contentType="text/html; charset=UTF-8" />
<head>
	<title><spring:message code="productList" />: <spring:message code="crud.functionalities.create" />
	</title>

</head>
<body>
	<a href="${pageContext.request.contextPath}/domain/productlist/show/${productDetail.productId}"
		class="ajaxy button button-search"><spring:message code="productList" />
	</a>
	<span class="ui-state-highlight button button-create"><spring:message code="crud.functionalities.create" />
	</span>
	<form:form
		action="${pageContext.request.contextPath}/domain/productdetail/create"
		modelAttribute="productDetail" method="POST" enctype="multipart/form-data">
		<table class="create">
			<tbody>
				<tr>
					<th>
						<spring:message code="productList_name" />
						<em>*</em>
					</th>
					<td>
						${productDetail.product.name }
						<form:hidden path="productId"/>
					</td>
				</tr>
				
				<tr>
					<th>
						<spring:message code="productList_miniLab" />
					</th>
					<td>
						<form:select path="miniLab">
							<form:option value=""><spring:message code="NULL" /></form:option>
							<form:option value="1"><spring:message code="productList_miniLab_hot" /></form:option>
							<form:option value="2"><spring:message code="productList_miniLab_new" /></form:option>
							<form:option value="3"><spring:message code="productList_miniLab_olm" /></form:option>
							<form:option value="4"><spring:message code="productList_miniLab_4" /></form:option>
							<form:option value="5"><spring:message code="productList_miniLab_5" /></form:option>
						</form:select>
						<form:errors path="miniLab" cssClass="error" />
					</td>
				</tr>

				<tr>
					<th>
						<spring:message code="productList_manual_description" />
					</th>
					<td>
						<form:textarea path="manualDescription" cssClass="{maxlength: 1000}" maxlength="1000" />
						<form:errors path="manualDescription" cssClass="error" />
					</td>
				</tr>
				<tr>
					<th><spring:message code="picture" /></th>
					<td>
						<input type="file" name="picFile" />
					</td>
				</tr>
				<tr>
					<th><spring:message code="productList_recommend_storage" /></th>
					<td>
						<form:radiobutton path="recommendStorage" value="1" /><spring:message code="TRUE" />
						<form:radiobutton path="recommendStorage" value="0" checked="checked"/><spring:message code="FALSE" />
					</td>
				</tr>
			</tbody>
			<tfoot>
				<tr>
					<td colspan="2">
						<spring:message code="crud.save.button" var="saveButton"/>
						<input type="submit" class="button button-save"	value="${saveButton}" />
					</td>
				</tr>
			</tfoot>
		</table>
	</form:form>
</body>
</html>