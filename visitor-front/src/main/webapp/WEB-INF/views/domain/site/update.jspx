<html xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" xmlns:jsp="http://java.sun.com/JSP/Page" 
xmlns:decorator="http://www.opensymphony.com/sitemesh/decorator" xmlns:c="http://java.sun.com/jsp/jstl/core" 
xmlns:form="http://www.springframework.org/tags/form" xmlns:security="http://www.springframework.org/security/tags" 
xmlns:spring="http://www.springframework.org/tags" version="2.0">
<jsp:output omit-xml-declaration="yes" />
<jsp:directive.page contentType="text/html; charset=UTF-8" />
<head>
	<title><spring:message code="site" />: <spring:message code="crud.functionalities.update" /></title>
</head>
<body>
	<a href="${pageContext.request.contextPath}/domain/site/show/${site.primaryKey}" class="ajaxy button button-show"><spring:message code="crud.show.button" /></a>
	<span class="ui-state-highlight button button-edit"><spring:message code="crud.edit.button" /></span>

	<form:form action="${pageContext.request.contextPath}/domain/site/update/${site.primaryKey}" modelAttribute="site" method="POST">
		<form:errors cssClass="error"/>
		<form:hidden path="siteId"/>
		<table class="edit">
			<tbody>
				<tr>
					<th><spring:message code="site_name" /> <em>*</em></th>
					<td>
						<form:input path="name" cssClass="required {maxlength: 120}" maxlength="120" size="100"/>
						<form:errors path="name" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="site_schemaName" /></th>
					<td>
						<form:input path="schemaName" cssClass="{maxlength: 240}" maxlength="240" size="100"/>
						<form:errors path="schemaName" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="site_status" /> <em>*</em></th>
					<td>
						<form:radiobutton path="status" value="0" /><spring:message code="site_status_yes" />
						<form:radiobutton path="status" value="1" /><spring:message code="site_status_no" />
						<form:errors path="status" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="site_companyId" /></th>
					<td>
						<form:input path="companyId" cssClass="number" maxlength="10"/>
						<form:errors path="companyId" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="site_channels" /></th>
					<td>
						<form:input path="channels" cssClass="{maxlength: 1024}" maxlength="1024" size="100"/>
						<form:errors path="channels" cssClass="error"/>
					</td>
				</tr>
			</tbody>
			<tfoot>
				<tr>
					<td colspan="2">
						<spring:message code="crud.save.button" var="saveButton"/>
						<input type="submit" class="button button-save" value="${saveButton}" />
					</td>
				</tr>
			</tfoot>
		</table>
	</form:form>
</body>
</html>