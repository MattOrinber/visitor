<html xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" xmlns:jsp="http://java.sun.com/JSP/Page" 
xmlns:decorator="http://www.opensymphony.com/sitemesh/decorator" xmlns:c="http://java.sun.com/jsp/jstl/core" 
xmlns:form="http://www.springframework.org/tags/form" xmlns:security="http://www.springframework.org/security/tags" 
xmlns:spring="http://www.springframework.org/tags" version="2.0">
<jsp:output omit-xml-declaration="yes" />
<jsp:directive.page contentType="text/html; charset=UTF-8" />
<head>
	<title><spring:message code="account_role" />: <spring:message code="crud.functionalities.example" /></title>
</head>
<body>
	<span class="ui-state-highlight button button-search"><spring:message code="account_role" /></span> 
	<a href="${pageContext.request.contextPath}/domain/role/create" class="button button-create"><spring:message code="crud.functionalities.create" /></a> 
	
	<form:form action="${pageContext.request.contextPath}/domain/role/list" modelAttribute="roleSearchForm" class="search">
		<table class="show">
			<tbody>
				<tr>
					<th><spring:message code="account_role_name" /></th>
					<td>
						<form:input path="role.roleName"/>
						<form:errors path="role.roleName" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="account_role_des" /></th>
					<td>
						<form:input path="role.roleDes"/>
						<form:errors path="role.roleDes" cssClass="error"/>
					</td>
				</tr>
			</tbody>
			<tfoot>
				<tr>
					<td colspan="2">
						<spring:message code="crud.search.button" var="searchButton"/>
						<input type="submit" class="button button-search" value="${searchButton}"/>
					</td>
				</tr>
			</tfoot>
		</table>
	</form:form>
	<jsp:include page="/domain/role/list" />
</body>
</html>