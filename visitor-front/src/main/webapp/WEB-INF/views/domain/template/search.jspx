<html xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:decorator="http://www.opensymphony.com/sitemesh/decorator" xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:form="http://www.springframework.org/tags/form" xmlns:security="http://www.springframework.org/security/tags" xmlns:spring="http://www.springframework.org/tags">

<jsp:output omit-xml-declaration="yes" />
<jsp:directive.page contentType="text/html; charset=UTF-8" />

<head>
	<title><spring:message code="template" />: <spring:message code="crud.functionalities.example" /></title>
</head>
<body>
	<span class="ui-state-highlight button button-search"><spring:message code="template" /></span> 
	<a href="${pageContext.request.contextPath}/domain/template/create" class="button button-create"><spring:message code="crud.functionalities.create" /></a> 

	<form:form action="${pageContext.request.contextPath}/domain/template/list" modelAttribute="templateSearchForm" class="search">
		<table class="show">
			<tbody>
				<tr>
					<th><spring:message code="template_name" /></th>
					<td>
						<form:input path="template.name"/>
						<form:errors path="template.name" cssClass="error"/>
					</td>
					<th><spring:message code="template_type" /></th>
					<td>
						<form:radiobutton path="template.type" value="" checked="checked"/><spring:message code="template_type_all" />
						<c:forEach items="${templateTypes}" var="typeEnum">
							<form:radiobutton path="template.type" value="${typeEnum.value}" /><spring:message code="${typeEnum.displayName}" />
						</c:forEach>
						<form:errors path="template.type" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="template_publishStatus" /></th>
					<td>
						<form:radiobutton path="template.publishStatus" value="" checked="checked"/><spring:message code="template_type_all" />
						<form:radiobutton path="template.publishStatus" value="0" /><spring:message code="template_publishStatus_false" />
						<form:radiobutton path="template.publishStatus" value="1" /><spring:message code="template_publishStatus_true" />
						<form:errors path="template.publishStatus" cssClass="error"/>
					</td>
					<th><spring:message code="template_description" /></th>
					<td>
						<form:input path="template.description"/>
						<form:errors path="template.description" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="template_publishBy" /></th>
					<td>
						<form:input path="template.publishBy"/>
						<form:errors path="template.publishBy" cssClass="error"/>
					</td>
					<th><spring:message code="template_publishDate" /></th>
					<td>
						<label for="publishDateRange.fromDate"><spring:message code="search.date.from" /></label>
						<form:input path="publishDateRange.fromDate" cssClass="datepicker"/>
						<label for="publishDateRange.toDate"><spring:message code="search.date.to" /></label>
						<form:input path="publishDateRange.toDate" cssClass="datepicker"/>
						<form:errors path="template.publishDate" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="template_createBy" /></th>
					<td>
						<form:input path="template.createBy"/>
						<form:errors path="template.createBy" cssClass="error"/>
					</td>
					<th><spring:message code="template_createDate" /></th>
					<td>
						<label for="createDateRange.fromDate"><spring:message code="search.date.from" /></label>
						<form:input path="createDateRange.fromDate" cssClass="datepicker"/>
						<label for="createDateRange.toDate"><spring:message code="search.date.to" /></label>
						<form:input path="createDateRange.toDate" cssClass="datepicker"/>
						<form:errors path="template.createDate" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="template_modBy" /></th>
					<td>
						<form:input path="template.modBy"/>
						<form:errors path="template.modBy" cssClass="error"/>
					</td>
					<th><spring:message code="template_modDate" /></th>
					<td>
						<label for="modDateRange.fromDate"><spring:message code="search.date.from" /></label>
						<form:input path="modDateRange.fromDate" cssClass="datepicker"/>
						<label for="modDateRange.toDate"><spring:message code="search.date.to" /></label>
						<form:input path="modDateRange.toDate" cssClass="datepicker"/>
						<form:errors path="template.modDate" cssClass="error"/>
					</td>
				</tr>
			</tbody>
			<tfoot>
				<tr>
					<td colspan="4">
						<spring:message code="crud.search.button" var="buttonValue" />
						<input type="submit" class="button button-search" value="${buttonValue}"/>
					</td>
				</tr>
			</tfoot>
		</table>
	</form:form>

	<jsp:include page="/domain/template/list" />
</body>
</html>