<html xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" xmlns:jsp="http://java.sun.com/JSP/Page" xmlns:decorator="http://www.opensymphony.com/sitemesh/decorator" xmlns:c="http://java.sun.com/jsp/jstl/core" xmlns:security="http://www.springframework.org/security/tags" xmlns:spring="http://www.springframework.org/tags" xmlns:form="http://www.springframework.org/tags/form">

<jsp:output omit-xml-declaration="yes" />
<jsp:directive.page contentType="text/html; charset=UTF-8" />

<head>
	<title><spring:message code="productFile" />: <spring:message code="crud.functionalities.example" /></title>
</head>
<body>
	<span class="ui-state-highlight button button-search"><spring:message code="productFile" /></span> 

	<form:form action="${pageContext.request.contextPath}/domain/productfile/list" modelAttribute="productFileSearchForm" class="search">
		<table class="show">
			<tbody>
				<tr>
					<th><spring:message code="productList_productId" /></th>
					<td>
						<form:input path="productFile.productId" />
						<form:errors path="productFile.productId" cssClass="error"/>
					</td>
					<th><spring:message code="productList_name" /></th>
					<td>
						<form:input path="productFile.product.name"/>
						<form:errors path="productFile.product.name" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="productFile_SoupengId" /></th>
					<td>
						<form:input path="productFile.filePath" />
						<form:errors path="productFile.filePath" cssClass="error"/>
					</td>
					<th><spring:message code="productFile_fileName" /></th>
					<td>
						<form:input path="productFile.fileName"/>
						<form:errors path="productFile.fileName" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th>
						<spring:message code="productList_productType" />
					</th>
					<td>
						<form:select path="productFile.product.productType">
							<form:option value="" select="select"><spring:message code="productList_productType_all" /></form:option>
							<form:options items="${productTypeList}" itemLabel="name" itemValue="value" />
						</form:select>
					</td>
					<th>
						<spring:message code="productFile_status" />
					</th>
					<td>
						<form:radiobutton path="productFile.status" value="" checked="checked"/><spring:message code="ALL" />
						<form:radiobutton path="productFile.status" value="0"/><spring:message code="Available" />
						<form:radiobutton path="productFile.status" value="1"/><spring:message code="UnAvailable" />
						<form:errors path="productFile.status" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="productFile_fileSuffix" /></th>
					<td>
						<form:input path="productFile.fileSuffix"/>
						<form:errors path="productFile.fileSuffix" cssClass="error"/>
					</td>
					<th><spring:message code="productFile_createDate" /></th>
					<td>
						<label for="createDateRange.fromDate"><spring:message code="search.date.from" /></label>
						<form:input path="createDateRange.fromDate" cssClass="datepicker"/>
						<label for="createDateRange.toDate"><spring:message code="search.date.to" /></label>
						<form:input path="createDateRange.toDate" cssClass="datepicker"/>
						<form:errors path="productFile.createDate" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th>
						<spring:message code="productFile_safeType" />
					</th>
					<td>
						<form:select path="productFile.safeType">
							<form:option value="" ><spring:message code="ANY" /></form:option>
							<form:options items="${safeTypeList}" itemValue="value" itemLabel="name" />
						</form:select>
						<form:errors path="productFile.safeType" cssClass="error" />
					</td>
					<th>
						<spring:message code="productFile_autoScan" />
					</th>
					<td>
						<form:radiobutton path="productFile.autoScan" value="" checked="checked"/><spring:message code="ANY" />
						<form:radiobutton path="productFile.autoScan" value="0"/><spring:message code="OPEN" />
						<form:radiobutton path="productFile.autoScan" value="1"/><spring:message code="CLOSE" />
						<form:errors path="productFile.autoScan" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th>
						<spring:message code="productList_category" />
					</th>
					<td>
						<form:select path="productFile.product.categoryId">
							<form:option value="" ><spring:message code="ANY" /></form:option>
							<form:options items="${productCategoryList}" itemValue="value" itemLabel="label" />
						</form:select>
						<form:errors path="productFile.product.categoryId" cssClass="error" />
					</td>
					<th>
						<spring:message code="productList_productSource" />
					</th>
					<td>
						<form:select path="productFile.product.sourceId">
							<form:option value="" ><spring:message code="ANY" /></form:option>
							<form:options items="${productSourceList}" itemValue="categoryId" itemLabel="name" />
						</form:select>
					</td>
				</tr>
				<tr>
					<th>
						<spring:message code="productList_operator" />
					</th>
					<td>
						<form:select path="productFile.product.operatorId">
							<form:option value="" ><spring:message code="ANY" /></form:option>
							<form:options items="${operatorList}" itemValue="categoryId" itemLabel="name" />
						</form:select>
					</td>
				</tr>
			</tbody>
			<tfoot>
				<tr>
					<td colspan="4">
						<spring:message code="crud.search.button" var="btnMsg" />
						<input type="submit" class="button button-search" value="${btnMsg}"/>
					</td>
				</tr>
			</tfoot>
		</table>
	</form:form>

	<jsp:include page="/domain/productfile/list" />

</body>
</html>