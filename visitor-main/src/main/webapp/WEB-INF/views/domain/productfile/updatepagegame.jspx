<html xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" xmlns:jsp="http://java.sun.com/JSP/Page" 
xmlns:decorator="http://www.opensymphony.com/sitemesh/decorator" xmlns:c="http://java.sun.com/jsp/jstl/core" 
xmlns:form="http://www.springframework.org/tags/form" xmlns:security="http://www.springframework.org/security/tags" 
xmlns:spring="http://www.springframework.org/tags" version="2.0">
<jsp:output omit-xml-declaration="yes" />
<jsp:directive.page contentType="text/html; charset=UTF-8" />
<head>
	<title><spring:message code="productFile" />: <spring:message code="crud.functionalities.update" /></title>
</head>
<body>
	<a href="${pageContext.request.contextPath}/domain/productlist/show/${productFile.product.primaryKey}" class="ajaxy button button-search"><spring:message code="productList" /></a>
	<a href="${pageContext.request.contextPath}/domain/productfile/showpagegame/${productFile.primaryKey}" class="ajaxy button button-show"><spring:message code="crud.show.button" /></a>
	<span class="ui-state-highlight button button-edit"><spring:message code="crud.edit.button" /></span>
	<a href="${pageContext.request.contextPath}/domain/productfile/delete/${productFile.primaryKey}" class="modal button button-delete"><spring:message code="crud.delete.button" /></a>

	<form:form action="${pageContext.request.contextPath}/domain/productfile/updatepagegame/${productFile.primaryKey}" modelAttribute="productFile" method="POST">
		<form:errors cssClass="error"/>
		<form:hidden path="fileId"/>
		<table class="edit">
			<tbody>
				<tr>
					<th style="width:10%"><spring:message code="productFile_SoupengName" /></th>
					<td style="width:40%">
						<form:input path="fileName" cssClass="required {maxlength: 200}" />
						<form:errors path="fileName" cssClass="error"/>
					</td>
					<th style="width:10%"><spring:message code="productFile_product" /> </th>
					<td style="width:40%">
						<spring:eval expression="productFile.product.name"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="productFile_PageGameUrl" /></th>
					<td>
						<form:input path="fileUrl" cssClass="required {maxlength: 200}" size="60"/>
						<form:errors path="fileUrl" cssClass="error"/>
					</td>
					<th><spring:message code="productFile_SoupengDisName" /></th>
					<td>
						<form:input path="fileDisName" cssClass="{maxlength: 100}" size="60"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="productFile_SoupengId" /> </th>
					<td>
						<spring:eval expression="productFile.filePath"/>
					</td>
					<th><spring:message code="productFile_status" /></th>
					<td>
					<c:choose>
						<c:when test="${available || productFile.status == 0}">
							<form:radiobutton path="status" value="0"/><spring:message code="Available" />
							<form:radiobutton path="status" value="1"/><spring:message code="UnAvailable" />
							<form:errors path="status" cssClass="error"/>
						</c:when>
						<c:otherwise>
							<form:radiobutton path="status" value="0" disabled="true" /><spring:message code="Available" />
							<form:radiobutton path="status" value="1" checked="checked" disabled="true" /><spring:message code="UnAvailable" />
							<input type="hidden" name="productFile.status" value="1" />
							<form:errors path="status" cssClass="error"/>
							<font color="red"><spring:message code="productFile_status_onlyone" /></font>
						</c:otherwise>
					</c:choose>
					</td>
				</tr>
			</tbody>
			<tfoot>
				<tr>
					<td colspan="4">
						<spring:message code="crud.save.button" var="saveButton"/>
						<input type="submit" class="button button-save" value="${saveButton}" />
					</td>
				</tr>
			</tfoot>
		</table>
	</form:form>
</body>
</html>