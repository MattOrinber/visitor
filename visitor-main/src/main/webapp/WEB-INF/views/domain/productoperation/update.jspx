<html xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" xmlns:jsp="http://java.sun.com/JSP/Page" 
xmlns:decorator="http://www.opensymphony.com/sitemesh/decorator" xmlns:c="http://java.sun.com/jsp/jstl/core" 
xmlns:form="http://www.springframework.org/tags/form" xmlns:security="http://www.springframework.org/security/tags" 
xmlns:spring="http://www.springframework.org/tags" version="2.0">
<jsp:output omit-xml-declaration="yes" />
<jsp:directive.page contentType="text/html; charset=UTF-8" />
<head>
	<title><spring:message code="productOperation" />: <spring:message code="crud.functionalities.update" /></title>
</head>
<body>
	<a href="${pageContext.request.contextPath}/domain/productoperation/search" class="ajaxy button button-search"><spring:message code="productOperation" /></a>
	<a href="${pageContext.request.contextPath}/domain/productoperation/show/${productOperation.primaryKey}" class="ajaxy button button-show"><spring:message code="crud.show.button" /></a>
	<span class="ui-state-highlight button button-edit"><spring:message code="crud.edit.button" /></span>
	<a href="${pageContext.request.contextPath}/domain/productoperation/delete/${productOperation.primaryKey}" class="modal button button-delete"><spring:message code="crud.delete.button" /></a>

	<form:form action="${pageContext.request.contextPath}/domain/productoperation/update/${productOperation.primaryKey}" modelAttribute="productOperation" method="POST">
		<form:errors cssClass="error"/>
		<form:hidden path="operationId"/>
		<table class="edit">
			<tbody>
				<tr>
					<th><spring:message code="productOperation_productId" /> <em>*</em></th>
					<td>
						<form:input path="productId" cssClass="number required"/>
						<form:errors path="productId" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="productOperation_type" /> <em>*</em></th>
					<td>
						<form:input path="type" cssClass="number required"/>
						<form:errors path="type" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="productOperation_content" /> <em>*</em></th>
					<td>
						<form:textarea path="content" cssClass="required {maxlength: 65535}"/>
						<form:errors path="content" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="productOperation_createBy" /> <em>*</em></th>
					<td>
						<form:input path="createBy" cssClass="required {maxlength: 60}" maxlength="60" size="100"/>
						<form:errors path="createBy" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="productOperation_createDate" /> <em>*</em></th>
					<td>
						<form:input path="createDate" cssClass="datepicker required" size="11"/>
						<form:errors path="createDate" cssClass="error"/>
					</td>
				</tr>
			</tbody>
			<tfoot>
				<tr>
					<td colspan="2">
						<input type="submit" class="button button-save" value="<spring:message code="crud.save.button" />" />
					</td>
				</tr>
			</tfoot>
		</table>
	</form:form>
</body>
</html>