<html xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" xmlns:jsp="http://java.sun.com/JSP/Page" 
xmlns:decorator="http://www.opensymphony.com/sitemesh/decorator" xmlns:c="http://java.sun.com/jsp/jstl/core" 
xmlns:form="http://www.springframework.org/tags/form" xmlns:security="http://www.springframework.org/security/tags" 
xmlns:spring="http://www.springframework.org/tags" version="2.0">
<jsp:output omit-xml-declaration="yes" />
<jsp:directive.page contentType="text/html; charset=UTF-8" />
<head>
	<title><spring:message code="messageReply" />: <spring:message code="crud.functionalities.create" /></title>
</head>
<body>
	<a href="${pageContext.request.contextPath}/domain/messagereply/search" class="ajaxy button button-search"><spring:message code="messageReply" /></a>
	<span class="ui-state-highlight button button-create"><spring:message code="crud.functionalities.create" /></span>
	<form:form action="${pageContext.request.contextPath}/domain/messagereply/create" modelAttribute="messageReply" method="POST">
		<form:errors cssClass="error"/>
		<form:hidden path="replyId"/>
		<table class="create">
			<tbody>
				<tr>
					<th><spring:message code="messageReply_messageId" /> <em>*</em></th>
					<td>
						<input type="hidden" id="message" name="message" value="<spring:eval expression="messageReply.messageId" javaScriptEscape="true"/>" />
						<input type="text" id="messageLabel" value="<spring:eval expression="messageReply.message" javaScriptEscape="true"/>" size="100">
						<script>
						$(function() {
							$("#messageLabel").autocomplete('destroy');
							$("#messageLabel").autocomplete({
								source: "${pageContext.request.contextPath}/domain/rest/messagecontent/autocomplete",
								select: function(event, ui) {
									$("#message").val(ui.item.id);
									$("#messageLabel").val(ui.item.label);
								}
							});
						});
						</script>
						<form:errors path="message" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="messageReply_num" /> <em>*</em></th>
					<td>
						<form:input path="num" cssClass="number required"/>
						<form:errors path="num" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="messageReply_createDate" /> <em>*</em></th>
					<td>
						<form:input path="createDate" cssClass="datepicker required" size="11"/>
						<form:errors path="createDate" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="messageReply_createBy" /> <em>*</em></th>
					<td>
						<form:input path="createBy" cssClass="required {maxlength: 60}" maxlength="60" size="100"/>
						<form:errors path="createBy" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="messageReply_status" /> <em>*</em></th>
					<td>
						<form:input path="status" cssClass="number required"/>
						<form:errors path="status" cssClass="error"/>
					</td>
				</tr>
				<tr>
					<th><spring:message code="messageReply_content" /> <em>*</em></th>
					<td>
						<form:input path="content" cssClass="required {maxlength: 255}" maxlength="255" size="100"/>
						<form:errors path="content" cssClass="error"/>
					</td>
				</tr>
			</tbody>
			<tfoot>
				<tr>
					<td colspan="2">
						<input type="submit" class="button button-save" value="<spring:message code="crud.save.button" />"/>
					</td>
				</tr>
			</tfoot>
		</table>
	</form:form>
</body>
</html>