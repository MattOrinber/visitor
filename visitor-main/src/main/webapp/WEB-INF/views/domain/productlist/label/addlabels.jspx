<html xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" xmlns:jsp="http://java.sun.com/JSP/Page" 
xmlns:decorator="http://www.opensymphony.com/sitemesh/decorator" xmlns:c="http://java.sun.com/jsp/jstl/core" 
xmlns:form="http://www.springframework.org/tags/form" xmlns:security="http://www.springframework.org/security/tags" 
xmlns:spring="http://www.springframework.org/tags" version="2.0">
<jsp:output omit-xml-declaration="yes" />
<jsp:directive.page contentType="text/html; charset=UTF-8" />
<head>
	<title><spring:message code="productList_label" />: <spring:message code="crud.functionalities.example" /></title>
	<script type="text/javascript" src="${pageContext.request.contextPath}/static/jquery-color/jquery.icolor.min.js"></script>
	<link rel="stylesheet" href="${pageContext.request.contextPath}/static/jquery-color/css/jquery-icolor.css" type="text/css" media="screen, projection" />
	<script type="text/javascript">
		$(document).ready(function() {
			$("#color").icolor({
				onSelect:function(c){this.$t.val(c);}
			});
		});
	</script>
	<script type="text/javascript">
		function deleteCheck(){

			var itemIds=document.getElementsByName("itemIds");
            var pk = document.getElementsByName("pk")[0].value;
			var count=0;
			var ids="";
			for(var i=0;i &lt; itemIds.length;i++){
				if(itemIds[i].checked){
					count++;
					ids= ids + itemIds[i].value + "_";
				}
			}
			
			if(count==0){
				alert("请至少选择一条记录！");
			}else{
				if(confirm("确定添加吗？")){
				
					ids = ids.substring(0,ids.length-1);
					var url = "${pageContext.request.contextPath}/domain/productlist/addLabelList/" + ids+"/"+pk;
					window.location = url;
				}
			}
		}
		
		function changeCheckState(check_style){
			var itemIds=document.getElementsByName("itemIds");
			
			var count=0;
			var ids="";
			
			var checked = true;
			if(check_style=="1"){
				checked = false;
			}
			
			for(var i=0;i &lt; itemIds.length;i++){
				if(itemIds[i].checked == checked){
					itemIds[i].checked = !checked;
				}
			}	
		}
	</script>	
</head>
<body>
	<!--<span class="ui-state-highlight button button-search"><spring:message code="searchKeyword" /></span> -->
	<!--<a href="${pageContext.request.contextPath}/domain/searchkeyword/create" class="button button-create"><spring:message code="crud.functionalities.create" /></a> -->
	<!--<a href="${pageContext.request.contextPath}/domain/searchkeyword/showfront" class="button button-show"><spring:message code="searchKeyword_dis_css" /></a>-->
	<form:form action="${pageContext.request.contextPath}//domain/productlist/label/labelList" modelAttribute="labelSearchForm" class="search">
		<table class="show">
			<tbody>
            <tr>
                <th><spring:message code="label_name" /></th>
                <td>
                    <form:input path="label.name" cssClass="{maxlength: 200}" maxlength="200" size="40"/>
                    <form:errors path="label.name" cssClass="error"/>
                </td>
                <th><spring:message code="label_status" /></th>
                <td >
                    <form:radiobutton path="label.status" value="" checked="checked"/><spring:message code="folder_status_all" />
                    <form:radiobutton path="label.status" value="0" /><spring:message code="folder_status_yes" />
                    <form:radiobutton path="label.status" value="1" /><spring:message code="folder_status_no" />
                    <form:errors path="label.status" cssClass="error"/>
                </td>

            </tr>
            <tr>
                <th><spring:message code="label_create_by" /></th>
                <td>
                    <form:input path="label.createBy" />
                    <form:errors path="label.createBy" cssClass="error"/>
                </td>
                <th><spring:message code="label_create_date" /></th>
                <td>
                    <label for="createDateRange.fromDate"><spring:message code="search.date.from" /></label>
                    <form:input path="createDateRange.fromDate" cssClass="datepicker" size="15"/>
                    <label for="createDateRange.toDate"><spring:message code="search.date.to" /></label>
                    <form:input path="createDateRange.toDate" cssClass="datepicker" size="15"/>
                    <form:errors path="label.createDate" cssClass="error"/>
                </td>
            </tr>
            <tr>
                <th><spring:message code="label_modify_by" /></th>
                <td>
                    <form:input path="label.modifyBy"/>
                    <form:errors path="label.modifyBy" cssClass="error"/>
                </td>
                <th><spring:message code="label_modify_date" /></th>
                <td>
                    <label for="modDateRange.fromDate"><spring:message code="search.date.from" /></label>
                    <form:input path="modDateRange.fromDate" cssClass="datepicker" size="15"/>
                    <label for="modDateRange.toDate"><spring:message code="search.date.to" /></label>
                    <form:input path="modDateRange.toDate" cssClass="datepicker" size="15"/>
                    <form:errors path="label.modifyBy" cssClass="error"/>
                </td>
            </tr>
            </tbody>
            <tfoot>
            <tr>
                <td colspan="4">
                    <spring:message code="crud.search.button" var="btnMessage"/>
                    <input type="submit" class="button button-search" value="${btnMessage}" />
                </td>
            </tr>
            </tfoot>
		</table>
	</form:form>
    <input type="hidden" name="pk" value="${pk}" />
    <jsp:include page="/domain/productlist/label/labelList" />
</body>
</html>