<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder charset="utf-8">
			<pattern>[%d{ISO8601}] [%-5level] [%X{session_id}] [%X{login}] [%logger] - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="file"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/nh/logs/visitor-admin/errlog/webapp.out</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>/nh/logs/visitor-admin/errlog/webapp.out-%d{yyyyMMdd}</FileNamePattern>
			<maxHistory>3</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>[%d{ISO8601}] [%-5level] [%X{session_id}] [%X{login}] [%logger] - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.hibernate.SQL" additivity="true">
		<level value="debug" />
		<appender-ref ref="file" />
	</logger>
	<logger name="org.springframework.web.servlet" level="warn" />

	<logger name="org.apache.solr.client.solrj.impl" level="error" />

	<root level="INFO">
		<appender-ref ref="file" />
	</root>
</configuration>